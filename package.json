{
	"name": "ruby-debug",
	"displayName": "Ruby Debug",
	"version": "0.3.4",
	"publisher": "castwide",
	"description": "A Ruby debugger that uses the Debug Adapter Protocol.",
	"author": {
		"name": "Fred Snyder"
	},
	"license": "MIT",
	"keywords": [
		"ruby",
		"debug adapter protocol"
	],
	"engines": {
		"vscode": "^1.31.0"
	},
	"extensionKind": "workspace",
	"icon": "vscode-ruby-debug.png",
	"categories": [
		"Debuggers"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/castwide/vscode-ruby-debug"
	},
	"bugs": {
		"url": "https://github.com/castwide/vscode-ruby-debug/issues"
	},
	"scripts": {
		"prepublish": "tsc -p ./src",
		"compile": "tsc -p ./src",
		"tslint": "tslint ./src/**/*.ts",
		"watch": "tsc -w -p ./src",
		"test": "mocha -u tdd ./out/tests/",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"dependencies": {
		"await-notify": "1.0.1",
		"ps-tree": "1.2.0",
		"ruby-spawn": "1.2.0",
		"vscode-debugadapter": "1.33.0"
	},
	"devDependencies": {
		"@types/mocha": "5.2.5",
		"@types/node": "8.9.3",
		"mocha": "5.2.0",
		"tslint": "5.11.0",
		"typescript": "3.1.6",
		"vsce": "1.53.2",
		"vscode": "^1.1.36",
		"vscode-debugadapter-testsupport": "1.33.0"
	},
	"main": "./out/extension",
	"activationEvents": [
		"onDebug",
		"onCommand:ruby-debug.getProgramName"
	],
	"contributes": {
		"breakpoints": [
			{
				"language": "ruby"
			}
		],
		"debuggers": [
			{
				"type": "ruby-debug",
				"label": "Ruby Debug",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a Ruby file.",
								"default": "${workspaceFolder}/${command:AskForProgramName}"
							},
							"programArgs": {
								"type": "array",
								"description": "Arguments for the program being debugged",
								"default": []
							},
							"debugger": {
								"type": "string",
								"description": "The path to the readapt executable.",
								"default": "readapt"
							},
							"debuggerArgs": {
								"type": "array",
								"description": "Arguments for the debugger",
								"default": [
									"--host",
									"127.0.0.1",
									"--port",
									"1234"
								]
							},
							"useBundler": {
								"type": "boolean",
								"description": "Start the debugger with Bundler",
								"default": false
							},
							"env": {
								"type": "object",
								"description": "Environment variables passed to the program",
								"default": {}
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "ruby-debug",
						"request": "launch",
						"name": "Launch File",
						"program": "${workspaceFolder}/${command:AskForProgramName}",
						"programArgs": [],
						"useBundler": false
					}
				],
				"configurationSnippets": [
					{
						"label": "Ruby Debug: Launch",
						"description": "Run a file in the workspace",
						"body": {
							"type": "ruby-debug",
							"request": "launch",
							"name": "Launch File",
							"program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
							"programArgs": [],
							"useBundler": false
						}
					},
					{
						"label": "Ruby Debug: RSpec",
						"description": "Run RSpec in a debugger",
						"body": {
							"type": "ruby-debug",
							"request": "launch",
							"name": "RSpec",
							"program": "rspec",
							"programArgs": [
								"^\"\\${workspaceFolder}\""
							],
							"useBundler": false
						}
					}
				],
				"variables": {
					"AskForProgramName": "ruby-debug.getProgramName"
				}
			}
		]
	}
}
